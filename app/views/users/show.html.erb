<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
    <% if current_user.avatar.attached? && @user.avatar.attached? %>
    <%= image_tag @user.avatar %>
  <%end %>
</div>
    </div>
    
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= @user.username %></h2>
        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
       <li><span><%= @posts.count %></span> posts</li>
       </ul>

  <% if @user.id != current_user.id %>
  <%= link_to 'Follow', user_follows_path(@user), method: :post,  class: 'btn btn-danger' unless @follow.present? %>
  <%= link_to 'Unfollow', follow_path(@follow.id), method: :delete,  class: 'btn btn-danger' if @follow.present? %>
  <% end%>
  <%= link_to 'Following', user_follows_path(@user) %> : <%= @user.following.count %>
  <%= link_to 'Followers', user_follow_path(@user) %> : <%= @user.followers.count %>


      <h2 class="name"><%= @user.name%></h2>
  
    </div>
  </div>
</div>

<div class="user-tabs">
  <a class="tab active" href="<%= user_path(current_user)%>"> 
    <i class="fa fa-th"></i>
    POSTS
</div>

<div class="user-images">
  <% @posts.each do |post|%>
    <div class="wrapper">
      <%=link_to post_path(post) do %>
        <%=image_tag post.image %>
      <% end %>
    </div>
  <% end %>
</div>

<%== pagy_bootstrap_nav(@pagy) %>