<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
  <% if current_user.avatar.attached? %>
    <%= image_tag @user.avatar %>
  <%end %>
</div>
    </div>
    
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= @user.username %></h2>
        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
       <li><span><%= @posts.count %></span> posts</li>
       </ul>

<%= link_to 'Follow', user_follows_path(@user), method: :post,  class: 'btn btn-danger' %>
<h5>Followers:  <%= @user.followers.count %> </h5>
<h5>Following: <%= @user.following.count %>  </h5> 


      <h2 class="name"><%= @user.name%></h2>
  <%=link_to current_user.website, current_user.website, class:  'website' %>
    </div>
  </div>
</div>

<div class="user-tabs">
  <a class="tab active" href="<%= user_path(current_user)%>"> 
    <i class="fa fa-th"></i>
    POSTS
</div>

<div class="user-images">
  <% @posts.each do |post|%>
    <div class="wrapper">
      <%=link_to post_path(post) do %>
        <%=image_tag post.image %>
      <% end %>
    </div>
  <% end %>
</div>

<%== pagy_bootstrap_nav(@pagy) %>