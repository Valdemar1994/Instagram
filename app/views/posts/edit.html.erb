<div class="post-edit-page">
  <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
    <%= form_with model: @post, local: true, html: {class: "form-horizontal form-edit-post"} do |f| %>
      <div class="actions">
        <div class="form-group">
          <%= f.text_field :description, placeholder: "Type new post text, max lenght post = 256 symbols.",
          :maxlength => 256 %>
        </div>
        <div class="form-group">
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
        </div>
      </div>
      <div class="action-button">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
        <%= link_to 'Delete Post', post_path, method: :delete, class: 'btn btn-danger',
        data: {confirm: "Are you sure you want to delete this post?"} %>
      </div>
    <% end %>
  </div>
</div>
