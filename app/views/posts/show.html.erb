<div class="post-show row">
  <div class="col-md-8">
    <%=image_tag @post.image, class: 'image' %>
  </div>
  <div class="col-md-4">
    <div class="user">
      <div class="avatar">
        <% if @post.user.avatar.attached? %>
          <%= link_to user_path(@post.user) do %>
            <%= image_tag @post.user.avatar %>
          <% end %>
        <% end %>
      </div>
      <%= link_to @post.user.username, user_path(@post.user), class: 'username' %>
    </div>
    <div class="description">
      <%= @post.description %>
    </div>

<div class ="comment">
    <h4>Comments:</h4>
    <% @post.comments.each do |comment|%>
    <p>  <strong><%= comment.user.username  %></strong>
    <%= comment.comment %></p>
    <% end %>

        <div class="comment-box">
          <%= form_for Comment.new do |f|%>
          <%= f.hidden_field :post_id, value: @post.id %>

          <div class="input-group">
            <%= f.text_field :comment, placeholder: "Add comment...", class: "form-control post-comment"%>
            <div class ="input_group-append">
              <%= f.submit "Add", class: "btn btn-success float-right" %>
              <% end %>
              </div>
        </div>
    </div>
</div>




  </div>
</div>

